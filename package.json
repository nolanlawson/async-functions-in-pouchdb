{
  "name": "async-functions-in-pouchdb",
  "version": "1.0.0",
  "description": "Testing ES7 async functions in PouchDB",
  "main": "lib/index.js",
  "author": "Nolan Lawson <nolan.lawson@gmail.com>",
  "license": "Apache",
  "scripts": {
    "test-node": "node --harmony_classes --harmony_arrow_functions --harmony_object_literals ./node_modules/mocha/bin/_mocha test/test.js",
    "coverage": "npm test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100",
    "test-browser": "./bin/test-browser.js",
    "jshint": "jshint -c .jshintrc lib/*.js test/test.js",
    "test": "npm run jshint && ./bin/run-test.sh",
    "build": "mkdir -p dist && browserify lib/index.js -s AsyncFunctionsInPouchDB-o dist/async-functions-in-pouchdb.js && npm run min",
    "min": "uglifyjs dist/async-functions-in-pouchdb.js -mc > dist/async-functions-in-pouchdb.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js"
  },
  "dependencies": {
    "pouchdb": "^3.3.1"
  },
  "devDependencies": {
    "babelify": "^5.0.3",
    "browserify": "~2.36.0",
    "chai": "~1.8.1",
    "chai-as-promised": "~4.1.0",
    "es3ify": "^0.1.3",
    "http-server": "~0.5.5",
    "istanbul": "^0.3.6",
    "jshint": "^2.6.0",
    "mocha": "~1.18",
    "phantomjs": "^1.9.7-5",
    "request": "^2.36.0",
    "sauce-connect-launcher": "^0.4.2",
    "selenium-standalone": "3.0.2",
    "uglify-js": "^2.4.13",
    "watchify": "~0.4.1",
    "wd": "^0.2.21"
  },
  "browserify": {
    "transform": [
      "babelify",
      "es3ify"
    ]
  }
}
